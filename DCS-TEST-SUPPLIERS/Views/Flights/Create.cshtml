@model DCS_TEST_SUPPLIERS.Models.Flight

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Flight Supplier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CarrierName" class="control-label">Carrier Name</label>
                <input asp-for="CarrierName" class="form-control" />
                <span asp-validation-for="CarrierName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Id" class="control-label">ID</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ManagerName" class="control-label">Manager Name</label>
                <input asp-for="ManagerName" class="form-control" />
                <span asp-validation-for="ManagerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ManagerPhoneNumber" class="control-label">Manager Phone Number</label>
                <input asp-for="ManagerPhoneNumber" class="form-control" />
                <span asp-validation-for="ManagerPhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateDate" class="control-label">Create Date</label>
                <input asp-for="CreateDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SupplierType" class="control-label">Supplier Type</label>
                <input asp-for="SupplierType" class="form-control" />
                <span asp-validation-for="SupplierType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
