@model IEnumerable<DCS_TEST_SUPPLIERS.Models.Hotel>

@{
    ViewData["Title"] = "Hotels Suppliers";
}

<h1>Hotels Suppliers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Chain Name</th>
            <th>Name</th>
            <th>Manager Name</th>
            <th>Manager Phone Number</th>
            <th>Create Date</th>
            <th>Supplier Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ChainName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ManagerName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ManagerPhoneNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SupplierType)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

